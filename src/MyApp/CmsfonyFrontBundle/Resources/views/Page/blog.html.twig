{% extends 'MyAppCmsfonyFrontBundle::base.html.twig' %}

{% block title %}{% endblock %}
{% block smallTitle %}Blog{% endblock %}
{% block bigTitle %}Articles du blog{% endblock %}
{% block content %}

        <div class="inner_content">
            <div class="pad30"></div>

            <div class="row">

                <div class="span9 pad15">
                    <div class="row">
                        {% for currentPost in posts %}
                            <!--post-->  

                            <!--date-->
                            <div class="span1">	
                                <div class="btn btn-medium btn-rounded btn-blog1"> {{ currentPost.date|date('d')  }} {{ currentPost.date|date('M')|upper  }} 
                                    <i class="fa fa-comments fa-2x"></i> <a class="com_no" href="#">0</a></div>
                            </div>
                            <!--post entry-->




                            <div class="span8">

                                <h1 class="post_link"><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}/post/{{ currentPost.id }}">{{ currentPost.title }} </a></h1>

                                <div class="post-meta muted">
                                    <ul>
                                        <li>Post√© par <a href="#">{{ currentPost.author }}</a> </li>
                                        <!--<li>in <a href="#">web</a>, <a href="#">graphics</a> </li>
                                        <li>tags <a href="#">prints</a>, <a href="#">design</a> </li>-->
                                    </ul>
                                </div>



                                {% if currentPost.image != null %}    
                                    <img 
                                        src="{{ asset(currentPost.image.webPath) }}"
                                        alt="{{ currentPost.image.alt }}"
                                        /> 
                                {% endif %}

                                <p>{{ currentPost.content[:800]|striptags|trim|convert_encoding('UTF-8', 'HTML-ENTITIES') }}<a href="#">[&#8230;]</a></p>

                                <div class="read_more"><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}/post/{{ currentPost.id }}">Lire la suite &rarr;</a></div>
                                <div class="pad10"></div>
                            </div><!--end post-->

                        {% endfor %}
                        <center>
                            <div class="pagination">
                                <ul>
                                    {{ knp_pagination_render(posts,'MyAppCmsfonyFrontBundle:Default:paginationTheme.html.twig') }}

                                </ul>
                            </div>
                        </center>
                    </div>
                </div>


