    <script type="text/javascript">
        function typeInputManager() {
            var selected = $('#myapp_cmsfonybundle_page_type').val()
            if (selected == 'Blog') {
                $('#pageContent').hide();
                $('#blogAlert').show();

            } else {
                $('#pageContent').show();
                $('#blogAlert').hide();
            }
        }
        $(document).ready(function() {
            typeInputManager();
        });
        $('#myapp_cmsfonybundle_page_type').change(function() {
            typeInputManager();
        });


    </script>
{% endblock %}