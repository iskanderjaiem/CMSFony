{% extends 'MyAppCmsfonyBundle::base.html.twig' %}

{% block bigTitle %} Liste des pages{% endblock %}
{% block dest1 %}<a href="">Pages</a>{% endblock %}
{% block dest2 %}Ajouter une page{% endblock %}
{% block content %}


    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Ajouter un menu </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>

                    </div>
                </div>
                <div class="ibox-content">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}


                    <!-- <div class="form-group"><label class="col-sm-2 control-label">Date de publication</label>
                        <div class="col-sm-10">
                            <div  id="data_1">
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" value="03/04/2014">
                                </div>
                            </div>
                        </div>
                    </div>-->


                    <div class="form-group"><label class="col-sm-2 control-label">Date</label>
                        <div class="col-sm-10">{{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}</div>
                    </div>
                    <div class="form-group"><label class="col-sm-2 control-label">Publié <br/>
                        </label>

                        <div class="col-sm-10" style="margin-top:7px;">
                            {{ form_widget(form.published)}}
                        </div>

                    </div>

                    <div class="form-group"><label class="col-sm-2 control-label">Titre</label>
                        <div class="col-sm-10">{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}</div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Url de la page</label>
                        <div class="col-sm-10">{{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}</div>
                    </div>
                    
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Type de la page</label>



                        <div class="col-sm-10">
                            <br/>
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'} }) }}

                        </div>

                    </div>

                    <div hidden id="blogAlert" class="alert alert-success alert-info ">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                        Une page de type Blog affichera par défaut la liste de <a class="alert-link" href="{{path('my_app_cmsfony_postList')}}">vos articles</a>.
                    </div>

                    <div id="pageContent">
                        <div class="hr-line-dashed"></div>

                        <div class="form-group"><label class="col-sm-2 control-label">Contenue</label>
                        </div>
                        {{ form_widget(form.content) }}
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            {{ form_widget(form.Appliquer, {'attr': {'class': 'btn btn-primary'}}) }}
                            <button class="btn btn-white" type="submit">Annuler</button>
                        </div>
                    </div> 


                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

