{% extends 'MyAppCmsfonyBundle::base.html.twig' %}

{% block bigTitle %} Gestion des templates{% endblock %}
{% block dest1 %}<a href="">CMSFony template par d√©faut</a>{% endblock %}
{% block dest2 %}{% endblock %}




    {% block head %}

    {% endblock %}

    {% block content %}



        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Modification de la configuration du template</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                                <i class="fa fa-wrench"></i>
                            </a>

                        </div>
                    </div>
                    <div class="ibox-content">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}




                        <div class="form-group">
                            <br/><br/><br/>
                            <label class="col-sm-3 control-label">Image Logo</label>
                            <div class="col-sm-5"> {{ form_widget(form.imageLogo.file, {'attr': {'class': 'form-control'}}) }}</div>
                            <div class="col-sm-3"> 
                                {% if logo is defined %}
                                    <img src='{{ asset(logo.webPath)}}' width="150px" height="100" style="margin-top:-30px;"/>
                                {% endif %}
                            </div>
                        </div>

                    <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">header Font Color</label>
                            <div class="col-sm-5"> {{ form_widget(form.headerFontColor, {'attr': {'class': 'form-control'}}) }}</div>
                            <div class="col-sm-3"><input style="margin-top:5px;" type="color" id="colorpicker" name="color" value="template.headerFontColor">     </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">header Background Color</label>
                            <div class="col-sm-5"> {{ form_widget(form.headerBackgroundColor, {'attr': {'class': 'form-control'}}) }}</div>
                            <div class="col-sm-3"><input style="margin-top:5px;" type="color" id="colorpicker2" name="color2" value="{{template.headerBackgroundColor}}">     </div>
                        </div>


                    <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                {{ form_widget(form.Appliquer, {'attr': {'class': 'btn btn-primary'}}) }}
                                <button class="btn btn-white" type="submit">Annuler</button>
                            </div>
                        </div> 

                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>





    {% endblock %}